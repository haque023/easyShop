<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7sdp"
    android:background="#00FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_205sdp"
        android:background="#00FFFFFF"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/itemImageCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="#00FFFFFF"
                    android:src="@drawable/logo"
                    />

      </androidx.cardview.widget.CardView>



<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00FFFFFF"
    app:layout_constraintEnd_toEndOf="@+id/itemImageCard"
    app:layout_constraintHorizontal_bias="0.015"
    app:layout_constraintStart_toStartOf="@+id/itemImageCard"
    app:layout_constraintTop_toTopOf="@+id/itemImageCard"
    >
    <TextView
        android:id="@+id/textNew"
        android:layout_margin="@dimen/_3sdp"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_20sdp"
        android:text="new"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/transparent_blue"

        />

</androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemImageCard"
                android:layout_alignBottom="@+id/itemImageCard"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Brochure"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemImageCard"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/itemTitle"
                android:layout_marginLeft="@dimen/_10sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Description"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemTitle" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignBottom="@+id/desc"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="top"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/desc"
                app:layout_constraintVertical_bias="0.324">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    app:layout_constraintVertical_bias="0.792"
                    tools:layout_editor_absoluteX="13dp"
                    >

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="120 BDT"
                        android:textColor="@color/whiteColor"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textSize="@dimen/_8sdp" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_40sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageButton
                                    android:id="@+id/itemMore"
                                    android:layout_width="@dimen/_9sdp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:background="#ffff"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/remove" />

                                <TextView
                                    android:id="@+id/howMuch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="1"
                                    android:textColor="#262626" />

                                <ImageButton
                                    android:id="@+id/itemLess"
                                    android:layout_width="@dimen/_9sdp"
                                    android:layout_height="@dimen/_9sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:background="#ffff"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/add" />

                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:id="@+id/addItem"
                        android:background="@drawable/roundedcornerbutton"
                        android:text="add"
                        android:textAllCaps="false"
                        android:textColor="#ffff" />
                </RelativeLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>